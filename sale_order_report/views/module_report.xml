                                    }
                                    .logo img {
                                        margin: 20px 20px 20px 20px;
                                    }
                                    .address {
                                        width: 25%;
                                        float: right;
                                        margin: 15px 0px 15px 0px;
                                    }
                                    .address p {
                                        text-align: right;
                                    }
                                    .clearfloat {
                                        clear: both;
                                        float: none;
                                    }
                                    .invoice {
                                        width: 100%;
                                        border-top: 2px solid dimgrey;
                                        border-bottom: 2px solid dimgrey;
                                        height: 192px;
                                        background-color: gainsboro;
                                    }
                                    .invoice-to {
                                        width: 50%;
                                        float: left;
                                        margin-top: 5px;
                                    }
                                    .invoice-to p {
                                        margin-left: 20px;
                                        margin-top: 5px;
                                        margin-bottom: 5px;
                                    }
                                    .invoice-no {
                                        width: 35%;
                                        float: right;
                                        background-color: mediumvioletred;
                                        margin: 10px 20px 0px 0px;
                                        color: aliceblue;

                                    }
                                    .invoice-no p {
                                        margin-left: 10px;
                                        padding: 3px;
                                    }
                                    .solid {
                                        font-weight: bold;
                                        margin-right: 5px;
                                    }
                                    table, td, th {
                                        border: 1px solid dimgrey;
                                        border-collapse: collapse;
                                        padding: 8px;
                                        margin: 10px 0px 10px 0px;
                                    }
                                    .invoice-no .liquid {
                                        text-align: justify;
                                    }
                                    
                                    table th {
                                        background-color: mediumvioletred;
                                        color: white;
                                        border: 1px solid;
                                    }
                                    .termed {
                                        margin: 40px 0px 40px 0px;
                                    }
                                    .bordered {
                                        border-bottom: 1px solid dimgrey;
                                    }
                                    .no-margin {
                                        margin-top: 0px;
                                        margin-bottom: 0px;
                                    }

                                    h2 {

                                        width: 40%;
                                        margin: 0px auto;
                                        text-align: center;
                                        text-decoration: underline;

                                    }


