                        <div class="page">

                            <style>

                                @media (min-width: 992px) {
                                    .container {
                                        width: 100%;
                                    }
                                }
                                @media (min-width: 768px) {
                                    .container {
                                        width: 100%;
                                    }
                                }
                                .container {
