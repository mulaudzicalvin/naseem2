                        <style>

                            .container{
                                width: 100%;
                                margin: 0px auto;
                            }
                            .center-container{
                                width: 1000px;
                                margin: 0px auto;
                            }
                            .heading{
                                width: 100%;
                                text-align: center;
                                margin: 0px auto;
                                margin-bottom: 50px;
                            }
                            .heading h3{
                                margin: 0px auto;
                            }
                            .heading p{
                                margin: 0px auto;
                            }
                            .list{
                                width: 80%;
                            }
                            .list p{
                                width: 80%;
                                float: left;
                                font-weight: bold;
                            }
                            .date {
                                width: 15%;
                                float: right;
                            }
                            .date p {
                                margin: 0px auto;
                            }
                            
                            table {
                                width: 100%;
                                border-spacing: 0px;
                            }

                            table tr th {
                                text-align: left;
                                border-bottom: 2px solid #666;
                                padding: 5px 0px;
                                font-size: 15px;
                                text-transform: capitalize;
                            }

                            table tr td {
                                border-top: 1px solid #ddd;
                                text-align: left;
                                padding: 5px 0px;
                                font-size: 15px;
                                text-transform: capitalize;
                            }

                        </style>

                        <div class="container">

